<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.datamodel.mapper.ObjectTypeMapper">

    <select id="selectByName" resultType="com.example.datamodel.entity.ObjectType">
        SELECT *
        FROM object_types
        WHERE name = #{name}
    </select>

    <select id="countByName" resultType="int">
        SELECT COUNT(*)
        FROM object_types
        WHERE name = #{name}
        <if test="excludeId != null">
            AND id != #{excludeId}
        </if>
    </select>

</mapper>


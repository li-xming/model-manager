<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.datamodel.mapper.InterfaceMapper">

    <select id="selectByName" resultType="com.example.datamodel.entity.Interface">
        SELECT *
        FROM interfaces
        WHERE name = #{name}
    </select>

    <select id="selectByMethodAndPath" resultType="com.example.datamodel.entity.Interface">
        SELECT *
        FROM interfaces
        WHERE method = #{method}
          AND path = #{path}
    </select>

</mapper>

